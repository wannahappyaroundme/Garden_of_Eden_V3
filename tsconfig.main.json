{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist/main",
    "types": ["node", "better-sqlite3"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "rootDir": "./src"
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules", "dist", "src/renderer", "src/preload", "**/*.test.ts", "**/*.spec.ts"]
}
